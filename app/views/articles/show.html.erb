<!-- Page Header -->
<header class="masthead" style="background-image: url('https://blackrockdigital.github.io/startbootstrap-clean-blog/img/post-bg.jpg')">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <div class="post-heading">
          <h1 class="text-center"><%= @article.title %></h1>
          <!--          <h2 class="subheading">Problems look mighty small from 150 miles up</h2>-->
          <span class="meta text-center">投稿者
              <a href="#"><%= @article.user.profile.name %></a>
            <p class="mt-0"><%= l @article.created_at, format: :long%></p>
          </span>
        </div>
      </div>
    </div>
  </div>
</header>

<!-- Post Content -->
<article>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <p><%= @article.body %></p>

        <%# if @article.image? %>
          <%#= image_tag @article.image.url %>
          <%# else %>
          <%#= image_tag "noimage.gif" %>
        <%# end %>


      </div>
    </div>
  </div>
</article>

<hr>

<div class="container">
  <% if @article.user_id == current_user.id %>
    <%= link_to "edit", edit_article_path(@article), class: "btn btn-outline-primary" %>
  <% end %>

</div>

