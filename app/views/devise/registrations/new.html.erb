<div class="container my-5">
  <h1 class="text-center my-5">新規登録</h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>


    <div class="form-group my-5">
      <%= label_tag(:profile_name, "名前")%> <br/>
      <%= text_field_tag "profile[name]", " ", class: "form-control" %>
    </div>


    <div class="form-group my-5">
      <%= f.label :email, "メールアドレス" %><br/>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>


    <div class="form-group my-5">
      <%= f.label :password, "パスワード" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上入力してください)</em>
      <% end %><br/>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="form-group my-5">
      <%= f.label :password_confirmation, "パスワード確認" %><br/>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="actions my-5">
      <%= f.submit "新規登録", class: "btn btn-success" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
